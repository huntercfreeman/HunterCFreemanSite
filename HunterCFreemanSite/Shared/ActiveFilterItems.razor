@if (!string.IsNullOrWhiteSpace(ProgrammingProjectRepository.SearchQuery))
{
    <ActiveFilterItem DisplayText="@ProgrammingProjectRepository.SearchQuery" RemoveFilter="(() => ProgrammingProjectRepository.FilterByTitle(string.Empty))" />
}
@if (ProgrammingProjectRepository.FilterByCProgrammingLanguageBool)
{
    <ActiveFilterItem DisplayText="C Programs" RemoveFilter="(() => ProgrammingProjectRepository.FilterByCProgrammingLanguage())" />
}
@if (ProgrammingProjectRepository.FilterByCSharpProgrammingLanguageBool)
{
    <ActiveFilterItem DisplayText="C# Programs" RemoveFilter="(() => ProgrammingProjectRepository.FilterByCSharpProgrammingLanguage())" />
}
@if (ProgrammingProjectRepository.FilterByListsBool)
{
    <ActiveFilterItem DisplayText="Lists" RemoveFilter="(() => ProgrammingProjectRepository.FilterByLists())" />
}
@if (ProgrammingProjectRepository.FilterByTreesBool)
{
    <ActiveFilterItem DisplayText="Trees" RemoveFilter="(() => ProgrammingProjectRepository.FilterByTrees())" />
}
@if (ProgrammingProjectRepository.FilterByDifferentialCalculusBool)
{
    <ActiveFilterItem DisplayText="Differential Calculus" RemoveFilter="(() => ProgrammingProjectRepository.FilterByDifferentialCalculus())" />
}
@if (ProgrammingProjectRepository.FilterByIntegralCalculusBool)
{
    <ActiveFilterItem DisplayText="Integral Calculus" RemoveFilter="(() => ProgrammingProjectRepository.FilterByIntegralCalculus())" />
}